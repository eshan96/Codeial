<html>
    <head>
        <title>
            <%= title  %>
        </title>
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
       <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        
    </head>

    <body>
        <%- include('_header'); %>

        <!-- <% if (flash.success && flash.success.length > 0) {%>
                 <h5>
                     <%= flash.success %>
                 </h5>
            <% } %> -->

            <script>
                 <% if (flash.success && flash.success.length > 0) {%>
                    new Noty({
                        theme: 'relax',
                        layout: 'topRight',
                        text: "<%= flash.success %>",
                        type: 'success',
                        timeout: 1500
                        }).show();
                    <% } %>

                    <% if (flash.error && flash.error.length > 0) {%>
                    new Noty({
                        theme: 'relax',
                        layout: 'topRight',
                        text: "<%= flash.error %>",
                        type: 'error',
                        timeout: 1500
                        }).show();
                    <% } %>
            </script>

        <%- body %>


        <%- include('_footer'); %>

        
        
    </body>
</html>